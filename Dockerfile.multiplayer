FROM oven/bun:latest

WORKDIR /app

# Copy package files
COPY package.json bun.lock ./

# Install dependencies
RUN bun install --frozen-lockfile

# Copy source code
COPY src/ ./src/
COPY tsconfig.json ./

# Expose the multiplayer server port
EXPOSE 3000

# Run the multiplayer server
CMD ["bun", "run", "src/multiplayer.ts", "--hostname=0.0.0.0"]


