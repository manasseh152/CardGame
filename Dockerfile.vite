FROM oven/bun:latest

WORKDIR /app

# Copy package files
COPY card-game-poc/package.json card-game-poc/bun.lock ./

# Install dependencies
RUN bun install --frozen-lockfile

# Copy source code
COPY card-game-poc/ ./

# Expose the Vite dev server port
EXPOSE 5173

# Run the Vite dev server
CMD ["bun", "run", "dev"]

